@model CvoInventarisClient.Models.VerzekeringViewModel

@{
    ViewBag.Title = "Verzekering - Edit";
}

<div class="col-sm-8">
    <div class="panel panel-primary">
        <div class="panel-heading">Aanpassen</div>
        <div class="container-fluid">
            @using (Html.BeginForm("Edit", "Verzekering"))
            {
                @Html.Hidden("idVerzekering", Model.Verzekeringen[0].Id)
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="costcenter" class="col-sm-2 control-label">Omschrijving</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" name="omschrijving" value="@Model.Verzekeringen[0].Omschrijving" required />
                        </div>
                    </div>

                </div>
                <button type="submit" class="btn btn-primary pull-right" style="margin-left: 5px">Pas aan</button>
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default pull-right" })
            }
        </div>
    </div>
</div>


