@model CvoInventarisClient.Models.ObjectTypeViewModel

@{
    ViewBag.Title = "Lokaal - Aanmaken";
}

<div class="panel panel-primary">
    <div class="panel-heading">Aanmaken</div>
    <div class="container-fluid">
        @using (Html.BeginForm("Create", "ObjectType", new { @class = "form-horizontal" }))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="omschrijving" class="col-sm-2 control-label">Omschrijving</label>
                    <div class="col-sm-5">
                        <input class="form-control" maxlength="50" type="text" name="omschrijving" required />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-1">
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default pull-left" })
                    </div>
                    <div class="col-sm-1">
                        <button type="submit" class="btn btn-primary pull-left">Voeg toe</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


