@model CvoInventarisClient.Models.FactuurViewModel

@{
    ViewBag.Title = "Factuur - Edit";
}

@using (Html.BeginForm("Edit", "Factuur"))
{
    <div class="panel panel-primary">
        <div class="panel-heading">@ViewBag.Title</div>
        <div class="container-fluid">
            @Html.Hidden("idFactuur", Model.Facturen[0].Id)
            @Html.Hidden("defaultIdLeverancier", Model.Facturen[0].Leverancier.Id)
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Facturen[0].CvoFactuurNummer)
                <input class="form-control" type="text" maxlength="50" name="cvofactuurnummer" value="@Model.Facturen[0].CvoFactuurNummer" />
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Facturen[0].LeverancierFactuurNummer)
                <input class="form-control" type="text" maxlength="50" name="leverancierfactuurnummer" value="@Model.Facturen[0].LeverancierFactuurNummer" />
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Facturen[0].VerwerkingsDatum)
                <input class="form-control" type="date" maxlength="50" name="verwerkingsdatum" value="@Model.Facturen[0].VerwerkingsDatum" />
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Facturen[0].ScholengroepNummer)
                <input class="form-control" type="text" maxlength="50" name="scholengroepnummer" value="@Model.Facturen[0].ScholengroepNummer" />
            </div>
            <div class="form-group">
                Leverancier
                <select class="form-control" name="Leveranciers">
                    <option value="@Model.Facturen[0].Leverancier.Id">@Model.Facturen[0].Leverancier.Naam</option>
                    @foreach (var item in Model.Leveranciers)
                    {
                        if (item.Value != Model.Facturen[0].Leverancier.Id.ToString())
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Facturen[0].Prijs)
                <input class="form-control" type="text" maxlength="50" name="prijs" value="@Model.Facturen[0].Prijs" />
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Facturen[0].Garantie)
                <input class="form-control" type="text" name="garantie" value="@Model.Facturen[0].Garantie" />
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Facturen[0].Omschrijving)
                <input class="form-control" type="text" maxlength="1200" name="omschrijving" value="@Model.Facturen[0].Omschrijving" />
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Facturen[0].Afschrijfperiode)
                <input class="form-control" type="text" name="afschrijfperiode" value="@Model.Facturen[0].Afschrijfperiode" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Pas factuur aan</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}
