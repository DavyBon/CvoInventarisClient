@model CvoInventarisClient.Models.HarddiskModel

@{ 
    ViewBag.Title = "Harddisk - Edit";
}

@using (Html.BeginForm("Edit", "Harddisk"))
{
    <div class="panel panel-primary">
        <div class="panel-heading">@ViewBag.Title</div>
        <div class="container-fluid">
            @Html.Hidden("idHarddisk", Model.IdHarddisk)
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Merk)
                @Html.ValidationMessageFor(model => model.Merk)
                <input class="form-control" type="text" name="merk" value="@Model.Merk"/>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Grootte)
                @Html.ValidationMessageFor(model => model.Grootte)
                <input class="form-control" type="text" name="grootte" value="@Model.Grootte"/>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.FabrieksNummer)
                @Html.ValidationMessageFor(model => model.FabrieksNummer)
                <input class="form-control" type="text" name="fabrieksnummer" value="@Model.FabrieksNummer"/>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Pas harddisk aan</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default"})
}