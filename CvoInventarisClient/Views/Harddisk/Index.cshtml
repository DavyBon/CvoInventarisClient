@model IEnumerable<CvoInventarisClient.Models.HarddiskModel>

@{
    ViewBag.Title = "Harddisks";
}

@if (!String.IsNullOrWhiteSpace(ViewBag.action))
{
    <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @ViewBag.action
    </div>
}
@using (Html.BeginForm("Delete", "Harddisk"))
{
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".nieuwModal">Nieuw</button>
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target=".verwijderModal">Verwijder</button>

    <div class="input-group col-lg-4 pull-right">
        <span class="input-group-addon">Zoeken</span>
        <input id="filter" type="text" class="form-control">
    </div>

    <div class="spacer"></div>

    <div class="panel panel-primary">
        <div class="panel-heading">@ViewBag.Title</div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.Merk)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Grootte)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FabrieksNummer)
                    </th>
                </tr>
            </thead>
            <tbody class="search">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="idArray" value="@item.IdHarddisk" />
                        </td>
                        <td>
                            <a class="bottom-align-text" href="@Url.Action("Edit", "Harddisk", new { id = item.IdHarddisk })"><s><span class="glyphicon glyphicon-pencil"></span></s></a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Merk)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Grootte)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FabrieksNummer)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- Delete modal -->
    <div class="modal fade verwijderModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <strong>Let op!</strong>
                </div>
                <div class="modal-body">
                    Bent u zeker?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <input type="submit" name="Delete" value="Verwijder" class="btn btn-danger" />
                </div>
            </div>
        </div>
    </div>
}

<div class="modal fade nieuwModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <strong>Vul in</strong>
            </div>
                @using (Html.BeginForm("Create", "Harddisk"))
                {
                    <div class="modal-body">
                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.Merk)
                            <input class="form-control" type="text" name="merk"/>
                        </div>
                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.Grootte)
                            <input class="form-control" type="text" name="grootte"/>
                        </div>
                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.FabrieksNummer)
                            <input class="form-control" type="text" name="fabrieksnummer"/>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Voeg harddisk toe</button>
                    </div>
                }
        </div>
    </div>
</div>
<script src="~/Scripts/Custom/Custom.js"></script>

