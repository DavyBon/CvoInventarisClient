@model CvoInventarisClient.Models.LokaalViewModel

@{
    ViewBag.Title = "Lokalen";
}
@if (!String.IsNullOrWhiteSpace(ViewBag.action))
{
    <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @ViewBag.action
    </div>
}
@using (Html.BeginForm("Delete", "Lokaal"))
{
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".nieuwModal">Nieuw</button>
    <input type="submit" name="Delete" value="Verwijder" class="btn btn-danger" />

    <div class="spacer"></div>

    <div class="panel panel-primary">
        <div class="panel-heading">@ViewBag.Title</div>
        <table class="table table-striped">
            <tr>
                <th></th>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Lokaal[0].LokaalNaam)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lokaal[0].AantalPlaatsen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lokaal[0].IsComputerLokaal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lokaal[0].Netwerk.Id)
                </th>
            </tr>

            @foreach (var item in Model.Lokaal)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="idArray" value="@item.IdLokaal" />
                    </td>
                    <td>
                        <a class="bottom-align-text" href="@Url.Action("Edit", "Lokaal", new { id = item.IdLokaal })"><s><span class="glyphicon glyphicon-pencil"></span></s></a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LokaalNaam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AantalPlaatsen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsComputerLokaal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Netwerk.Id)
                    </td>
                </tr>
            }
        </table>
    </div>
}

<div class="modal fade nieuwModal" tabindex="-1" role="dialog" aria-labelledby="nieuwModalLabel">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <strong>Voeg toe...</strong>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Create", "Lokaal"))
                {
                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.Lokaal[0].LokaalNaam)
                        <input class="form-control" type="text" name="lokaalNaam" required />
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.Lokaal[0].AantalPlaatsen)
                        <input class="form-control" type="text" name="aantalPlaatsen" required />
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.Lokaal[0].IsComputerLokaal)
                        <input class="form-control" type="checkbox" name="isComputerLokaal" required />
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.Lokaal[0].Netwerk.Id)
                        <input class="form-control" type="text" name="idNetwerk" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Voeg lokaal toe</button>
                }
            </div>
        </div>
    </div>
</div>
