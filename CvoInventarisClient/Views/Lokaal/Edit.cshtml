@model CvoInventarisClient.Models.LokaalViewModel

@{
    ViewBag.Title = "Lokaal - Edit";
}

@using (Html.BeginForm("Edit", "Lokaal"))
{
    <div class="panel panel-primary">
        <div class="panel-heading">@ViewBag.Title</div>
        <div class="container-fluid">
            @Html.Hidden("idLokaal", Model.Lokaal[0].IdLokaal)
            @Html.Hidden("idNetwerk", Model.Lokaal[0].Netwerk.Id)
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Lokaal[0].LokaalNaam)
                @Html.ValidationMessageFor(model => model.Lokaal[0].LokaalNaam)
                <input class="form-control" type="text" name="lokaalNaam" value="@Model.Lokaal[0].LokaalNaam"/>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Lokaal[0].AantalPlaatsen)
                @Html.ValidationMessageFor(model => model.Lokaal[0].AantalPlaatsen)
                <input class="form-control" type="text" name="aantalPlaatsen" value="@Model.Lokaal[0].AantalPlaatsen"/>
            </div>
            <div class="checkbox">
                <label><input type="checkbox" name="isComputerLokaal" value="True" />@Html.DisplayNameFor(model => model.Lokaal[0].IsComputerLokaal)</label>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Lokaal[0].Netwerk)
                @Html.DropDownListFor(model => model.Netwerk, Model.Netwerk, Model.Lokaal[0].Netwerk.Merk, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Pas lokaal aan</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}

