<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Stylesheet.css" rel="stylesheet" />

    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>

    <meta name="description" content="CvoInventaris applicatie" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-2">
                <ul class="nav nav-pills nav-stacked">
                    <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")"><a href="@Url.Action("Index","Home")"><span class="glyphicon glyphicon-home"></span> Home</a></li>
                    <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Profiel" ? "active" : "")"><a href="@Url.Action("Index","Home")"><span class="glyphicon glyphicon-user"></span> Account</a></li>
                    <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Overzicht" ? "active" : "")"><a href="@Url.Action("Index","Overzicht")"><span class="glyphicon glyphicon-list-alt"></span> Overzicht</a></li>
                    <li><a class="bottom-align-text" href="@Url.Action("Loguit","Account")"><span class="glyphicon glyphicon-log-out"></span> Log uit</a></li>
                </ul>
            </div>
            <div class="col-lg-10">               
                    @RenderBody()             
            </div>
        </div>
    </div>
</body>
</html>
