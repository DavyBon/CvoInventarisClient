@model CvoInventarisClient.Models.HardwareViewModel

@{
    ViewBag.Title = "Inventaris";
}
@if (!String.IsNullOrWhiteSpace(ViewBag.action))
{
    <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @ViewBag.action
    </div>
}
@using (Html.BeginForm("Delete", "Hardware"))
{
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".nieuwModal">Nieuw</button>
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target=".verwijderModal">Verwijder</button>

    <div class="input-group col-lg-4 pull-right">
        <span class="input-group-addon">Zoeken</span>
        <input id="filter" type="text" class="form-control">
    </div>

    <div class="spacer"></div>

    <div class="panel panel-primary">
        <div class="panel-heading">@ViewBag.Title</div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th></th>
                    <th>
                        cpu
                    </th>
                    <th>
                        apparaat
                    </th>
                    <th>
                        Grafische kaart
                    </th>
                    <th>
                        harddisk
                    </th>
                </tr>
            </thead>
            <tbody class="search">
                @foreach (var item in Model.Hardwares)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="idArray" value="@item.IdHardware" />
                        </td>
                        <td>
                            <a class="bottom-align-text" href="@Url.Action("Edit", "Hardware", new { id = item.IdHardware })"><span class="glyphicon glyphicon-pencil"></span></a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cpu.Merk)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Device.Merk)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GrafischeKaart.Merk)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Harddisk.Merk)
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- Delete modal -->
    <div class="modal fade verwijderModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <strong>Let op!</strong>
                </div>
                <div class="modal-body">
                    Bent u zeker?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <input type="submit" name="Delete" value="Verwijder" class="btn btn-danger" />
                </div>
            </div>
        </div>
    </div>
}
<!-- nieuw modal -->
<div class="modal fade nieuwModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <strong>Vul in</strong>
            </div>
            @using (Html.BeginForm("Create", "Hardware"))
            {
                <div class="modal-body">
                    <div class="form-group">
                        Cpu
                        @Html.DropDownListFor(model => model.Cpus, Model.Cpus, "", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        apparaat
                        @Html.DropDownListFor(model => model.Devices, Model.Devices, "", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        grafische kaart
                        @Html.DropDownListFor(model => model.GrafischeKaarten, Model.GrafischeKaarten, "", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        Harddisk 
                        @Html.DropDownListFor(model => model.Harddisks, Model.Harddisks, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Voeg toe aan hardware</button>
                </div>
            }
        </div>
    </div>
</div>
<script src="~/Scripts/Custom/Custom.js"></script>