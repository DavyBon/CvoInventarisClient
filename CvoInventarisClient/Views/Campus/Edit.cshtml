@model CvoInventarisClient.Models.CampusViewModel

@{
    ViewBag.Title = "Campus - Edit";
}

<div class="col-sm-8">
    <div class="panel panel-primary">
        <div class="panel-heading">Aanpassen</div>
        <div class="container-fluid">
            @using (Html.BeginForm("Edit", "Campus"))
            {
                @Html.Hidden("idCampus", Model.Campussen[0].Id)

                <div class="form-horizontal">

                    <div class="form-group">
                        <label for="naam" class="col-sm-2 control-label">Naam</label>
                        <div class="col-sm-10">
                            <input class="form-control" value="@Model.Campussen[0].Naam" maxlength="50" type="text" name="naam" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="postcode" class="col-sm-2 control-label">Postcode</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="postcode">
                                <option value="@Model.Campussen[0].Postcode.Id">@Model.Campussen[0].Postcode.Gemeente</option>
                                @foreach (var item in Model.Postcodes)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="straat" class="col-sm-2 control-label">Straat</label>
                        <div class="col-sm-10">
                            <input class="form-control" value="@Model.Campussen[0].Straat" maxlength="50" type="text" name="straat" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="nummer" class="col-sm-2 control-label">Nummer</label>
                        <div class="col-sm-10">
                            <input class="form-control" value="@Model.Campussen[0].Nummer" maxlength="50" type="text" name="nummer" />
                        </div>
                    </div>

                </div>
                <button type="submit" class="btn btn-primary pull-right" style="margin-left: 5px">Pas aan</button>
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default pull-right" })

            }
        </div>
    </div>
</div>
