@model CvoInventarisClient.Models.CampusViewModel

@{
    ViewBag.Title = "Campus - Aanmaken";
}

<div class="col-sm-8">
    <div class="panel panel-primary">
        <div class="panel-heading">Aanmaken</div>
        <div class="container-fluid">
            @using (Html.BeginForm("Create", "Campus", new { @class = "form-horizontal" }))
            {
                <div class="form-horizontal">

                    <div class="form-group">
                        <label for="naam" class="col-sm-2 control-label">Naam</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" maxlength="50" name="naam" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Postcode</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="postcode">
                                <option value="">-Selecteer-</option>
                                @foreach (var item in Model.Postcodes)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="straat" class="col-sm-2 control-label">Straat</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" maxlength="50" name="straat" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="nummer" class="col-sm-2 control-label">Nummer</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" maxlength="50" name="nummer" />
                        </div>
                    </div>

                </div>
                <button type="submit" class="btn btn-primary pull-right" style="margin-left: 5px">Voeg toe</button>
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default pull-right" })
            }
        </div>
    </div>
</div>