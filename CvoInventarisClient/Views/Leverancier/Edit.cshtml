@model CvoInventarisClient.Models.LeverancierViewModel

@{
    ViewBag.Title = "Leverancier - Edit";
}

@using (Html.BeginForm("Edit", "Leverancier"))
{
    <div class="panel panel-primary">
        <div class="panel-heading">@ViewBag.Title</div>
        <div class="container-fluid">
            @Html.Hidden("idLeverancier", Model.Leveranciers[0].Id)
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Leveranciers[0].Naam)
                <input class="form-control" maxlength="255" type="text" name="naam" value="@Model.Leveranciers[0].Naam" required/>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Leveranciers[0].Afkorting)
                <input class="form-control" maxlength="10" type="text" name="afkorting" value="@Model.Leveranciers[0].Afkorting" required/>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Leveranciers[0].Straat)
                <input class="form-control" maxlength="255" type="text" name="straat" value="@Model.Leveranciers[0].Straat" required/>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Leveranciers[0].HuisNummer)
                <input class="form-control" maxlength="10" type="text" name="huisNummer" value="@Model.Leveranciers[0].HuisNummer" required/>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Leveranciers[0].BusNummer)
                <input class="form-control" maxlength="10" type="text" name="busNummer" value="@Model.Leveranciers[0].BusNummer" required/>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Leveranciers[0].Postcode.Gemeente)
                <input class="form-control" type="text" name="postcode" value="@Model.Leveranciers[0].Postcode.Gemeente" required/>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Leveranciers[0].Telefoon)
                <input class="form-control" maxlength="50" type="text" name="telefoon" value="@Model.Leveranciers[0].Telefoon" required/>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Leveranciers[0].Fax)
                <input class="form-control" maxlength="50" type="text" name="fax" value="@Model.Leveranciers[0].Fax" required/>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Leveranciers[0].Email)
                <input class="form-control" maxlength="50" type="text" name="email" value="@Model.Leveranciers[0].Email" required/>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Leveranciers[0].Website)
                <input class="form-control" maxlength="50" type="text" name="website" value="@Model.Leveranciers[0].Website" required/>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Leveranciers[0].BtwNummer)
                <input class="form-control" maxlength="50" type="text" name="btwNummer" value="@Model.Leveranciers[0].BtwNummer" required/>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Leveranciers[0].Iban)
                <input class="form-control" maxlength="50" type="text" name="iban" value="@Model.Leveranciers[0].Iban" required/>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Leveranciers[0].Bic)
                <input class="form-control" maxlength="50" type="text" name="bic" value="@Model.Leveranciers[0].Bic" required/>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Leveranciers[0].ToegevoegdOp)
                <input class="form-control" maxlength="20" type="date" name="toegevoegdOp" value="@Model.Leveranciers[0].ToegevoegdOp" required/>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Pas leverancier aan</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}

