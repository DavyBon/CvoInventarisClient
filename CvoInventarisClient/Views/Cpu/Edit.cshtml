@model CvoInventarisClient.Models.CpuModel

@{
    ViewBag.Title = "Cpu - Edit";
}

@using (Html.BeginForm("Edit", "Cpu"))
{
    <div class="panel panel-primary">
        <div class="panel-heading">@ViewBag.Title</div>
        <div class="container-fluid">
            @Html.Hidden("IdCpu", Model.IdCpu)
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Merk)
                <input class="form-control" type="text" name="merk" value="@Model.Merk" required />
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Type)
                <input class="form-control" type="text" name="driver" value="@Model.Type" required />
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Snelheid)
                <input class="form-control" type="text" name="snelheid" value="@Model.Snelheid" required />
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.FabrieksNummer)
                <input class="form-control" type="text" name="type" value="@Model.FabrieksNummer" min="1" required />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Pas cpu aan</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}


