@model IEnumerable<CvoInventarisClient.ServiceReference.Netwerk>

@{
    ViewBag.Title = "Netwerken";
}
@if (!String.IsNullOrWhiteSpace(ViewBag.action))
{
    <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @ViewBag.action
    </div>
}
@using (Html.BeginForm("Delete", "Netwerk"))
{
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".nieuwModal">Nieuw</button>
    <input type="submit" name="Delete" value="Verwijder" class="btn btn-danger" />

    <div class="panel panel-primary">
        <div class="panel-heading">@ViewBag.Title</div>
        <table class="table table-striped">
            <tr>
                <th></th>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Driver)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Merk)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Snelheid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="idArray" value="@item.Id" />
                    </td>
                    <td>
                        <a class="bottom-align-text" href="@Url.Action("Edit", "Netwerk", new { id = item.Id })"><s><span class="glyphicon glyphicon-pencil"></span></a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Driver)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Merk)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Snelheid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>

                </tr>
            }

        </table>
    </div>
}
<!-- modal -->
<div class="modal fade nieuwModal" tabindex="-1" role="dialog" aria-labelledby="nieuwModalLabel">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <strong>Voeg toe..</strong>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Create", "Netwerk"))
                {
                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.Merk)
                        <input class="form-control" type="text" name="merk" />
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.Driver)
                        <input class="form-control" type="text" name="driver" />
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.Snelheid)
                        <input class="form-control" type="text" name="snelheid" />
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.Type)
                        <input class="form-control" type="text" name="type" />
                    </div>
                    <button type="submit" class="btn btn-primary">Voeg netwerk toe</button>
                }
            </div>
        </div>
    </div>
</div>