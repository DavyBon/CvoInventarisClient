@model IEnumerable<CvoInventarisClient.Models.InventarisModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Label)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Object.ObjectType.Omschrijving)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAanwezig)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActief)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Label)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Object.Kenmerken)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsAanwezig)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActief)
        </td>      
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
